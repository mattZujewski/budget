# Budget App Configuration
LOG_LEVEL=INFO

# AI API Provider (none, claude, openai, local)
AI_PROVIDER=claude  # Change to your preferred provider

# Claude API Settings
CLAUDE_ENABLED=True  # Set to True if using Claude
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-sonnet-20240229  # You can choose the model you prefer
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=30

# OpenAI API Settings
OPENAI_ENABLED=False  # Set to True if using OpenAI
OPENAI_API_KEY=your_actual_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo  # Or another model you prefer
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# Local Model Settings
LOCAL_MODEL_ENABLED=False
LOCAL_MODEL_URL=http://localhost:11434/api/generate
LOCAL_MODEL=llama2
LOCAL_MODEL_TIMEOUT=60

# AI Capabilities
AI_CATEGORIZE=True
AI_INSIGHTS=True
AI_RECOMMENDATIONS=True
AI_ASSISTANT=True